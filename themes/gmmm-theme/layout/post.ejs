<%- css('./post.css') %>

<div class="post-header">
    <h2><%- page.title %></h2>
    <span class="post-date"><%= time(page.date, 'MMM Do YYYY') %></span>
</div>
<div class="post-content">
    <% if (page.albumUrl) { %>
        <a class="link" href="<%= url_for(page.albumUrl) %>" target="_blank">View the full album on Flickr</a>
    <% } %>

    <%- page.content %>

    <% if (page.fullTextUrl) { %>
        <a class="link" href="<%= url_for(page.fullTextUrl) %>" target="_blank">Read more...</a>
    <% } %>
</div>